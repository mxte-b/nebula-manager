{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nebula Manager",
  "version": "0.3.0",
  "identifier": "mxteb.nebula-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Nebula Manager - Hassle-free Password Vault",
        "width": 1000,
        "height": 600,
        "fullscreen": false,
        "resizable": false,
        "maximizable": false,
        "backgroundColor": "#121212"
      },
      {
        "label": "overlay",
        "width": 640,
        "height": 440,
        "url": "overlay/index.html",
        "visible": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "theme": "Dark",
        "resizable": false,
        "skipTaskbar": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
